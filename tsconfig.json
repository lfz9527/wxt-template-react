{
    "extends": "./.wxt/tsconfig.json",
    "compilerOptions": {
        "allowImportingTsExtensions": true,
        "jsx": "react-jsx",
        "baseUrl": "./",
        "paths": {
            "@/*": ["./src/*"],
            "@assets/*": ["./src/assets/*"],
            "@constants/*": ["./src/constants/*"],
            "@content/*": ["./src/content/*"],
            "@sidePanel/*": ["./src/sidePanel/*"],
            "@background/*": ["./src/background/*"],
            "@utils/*": ["./src/utils/*"]
        }
    }
}
